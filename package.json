  "bugs": {
    "url": "https://github.com/sumithemmadi/bhimupijs/issues"
  },
  "homepage": "https://github.com/sumithemmadi/bhimupijs#readme",
  "devDependencies": {
    "eslint": "^8.15.0",
    "prettier": "2.7.1"
  }
}
